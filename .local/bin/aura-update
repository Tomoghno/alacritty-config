#!/bin/sh

### Aura update Script ###

# Colors
BLACK='\033[0;30m'
RED='\033[0;31m'
GREEN='\033[0;32m'
BROWN='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LGRAY='\033[0;37m'
DGRAY='\033[1;30m'
LRED='\033[1;31m'
LGREEN='\033[1;32m'
YELLOW='\033[01;33m'
LBLUE='\033[01;34m'
LPURPLE='\033[01;35m'
LCYAN='\033[01;36m'
WHITE='\033[01;37m'
NC='\033[0m' # No Color

### Updating Arch Linux Packages.
sudo aura -Syu
sudo aura -Au

### Updating Flatpak Apps.
echo -e "aura >>= ${GREEN}Updating flatpak apps...${NC}"
flatpak update

### Updating firefox GNOME theme (Default Profile).
echo -e "aura >>= ${GREEN}Updating firefox GNOME theme...${NC}"
cd $HOME/.mozilla/firefox/*.*/chrome/firefox-gnome-theme
git pull origin master
